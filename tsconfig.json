{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "": ["node_modules/", "src/types/"],
      "@/*": ["./src/*"]
    }
  },
  // "exclude": ["dist"],
  "include": ["src"],
  "types": ["src/types"]
}
